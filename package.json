  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier . --write",
    "size": "size-limit",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "size-limit": [
    {
      "path": ".next/static/chunks/*.js",
      "limit": "170 KB"
    }
